<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/in_detail"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include
        layout="@layout/base_top_bar"></include>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:padding="8dp"
            android:id="@+id/ll_left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_picture"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/picture_add_big"/>
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_size"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:hint="商品数量"/>
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_price"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:hint="出库价格"/>
        </LinearLayout>
        <LinearLayout
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLength="15"
                android:maxLines="1"
                android:hint="请输入商品名称"/>
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_detail"
                android:gravity="top"
                android:layout_marginTop="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:minLines="3"
                android:maxLines="3"
                android:maxLength="60"
                android:hint="请输入商品详情"/>
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_category"
                android:layout_marginTop="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLines="1"
                android:hint="请输入商品种类"/>
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_warehousename"
                android:layout_marginTop="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLength="15"
                android:maxLines="1"
                android:text="仓库名"/>
            <Button
                android:id="@+id/btn_add"
                android:layout_marginTop="8dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="#23D2F5"
                android:maxLength="15"
                android:maxLines="1"
                android:text="出库"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/commit"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="#23D2F5"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="修改商品信息，之前出入库数据不会同步更改."
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
</RelativeLayout>