<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <include
       android:id="@+id/topbar"
       layout="@layout/base_top_bar">
   </include>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:id="@+id/member_list"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/empty_rl"
        android:visibility="gone"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/empty_box"
            android:id="@+id/im_empty"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_nomedia"
            android:text="暂无用户信息，请先添加~"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

        android:id="@+id/title_manager"
        android:layout_width="80dp"
        android:theme="@style/Theme.MaterialComponents"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:text="职级管理"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:gravity="center|right"
        android:layout_marginLeft="15dp"
        android:layout_height="80dp"></com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:visibility="gone"
        android:id="@+id/manager_group"
        android:layout_width="80dp"
        android:layout_above="@+id/title_manager"
        android:theme="@style/Theme.MaterialComponents"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:text="部门管理"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:gravity="center|right"
        android:layout_marginLeft="15dp"
        android:layout_height="80dp"></com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="80dp"
        android:theme="@style/Theme.MaterialComponents"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/add_new_member"
        android:background="@drawable/round_background"
        android:layout_marginBottom="30dp"
        android:text="新增成员"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:gravity="center|right"
        android:layout_marginRight="15dp"
        android:layout_height="80dp">

    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


</RelativeLayout>