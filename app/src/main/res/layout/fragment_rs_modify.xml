<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include
        layout="@layout/base_top_bar"></include>
    <LinearLayout
        android:id="@+id/item_rl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLength="15"
                android:maxLines="1"
                android:hint="请输入联系人名称~"/>
            <Button
                android:textColor="@color/white"
                android:background="#A9DFBF"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_modify"
                android:text="修改"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D6DBDF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox1"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="一号标签"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="二号标签"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox3"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="三号标签"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox4"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="四号标签"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D6DBDF"/>
        <com.xuexiang.xui.widget.edittext.ClearEditText
            android:id="@+id/et_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLength="15"
            android:maxLines="1"
            android:hint="请输入公司地址~"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_contract"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLength="15"
                android:maxLines="1"
                android:layout_weight="1"
                android:hint="请输入公司名称~"/>
            <com.xuexiang.xui.widget.edittext.ClearEditText
                android:id="@+id/et_company"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLength="15"
                android:maxLines="1"
                android:layout_weight="1"
                android:hint="请输入联系方式~"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#2C3E50"/>
        <Button
            android:textColor="@color/black"
            android:background="#AED6F1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_commit"
            android:text="确认"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_nomedia"
        android:text="当前无历史记录"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_marginTop="5dp"
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pager"
            android:cacheColorHint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>