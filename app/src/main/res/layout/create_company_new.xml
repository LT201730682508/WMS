<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/backgroundGray"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="创建公司"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:background="@color/gray"
        android:id="@+id/dialog_title"
        android:textColor="@color/yellow"
        android:paddingLeft="20dp"
        android:layout_height="50dp">
    </TextView>
    <com.xuexiang.xui.widget.edittext.ClearEditText
        android:layout_width="match_parent"
        android:layout_below="@+id/dialog_title"
        android:hint="请输入公司名称"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:id="@+id/company_name"
        android:layout_marginLeft="15dp"
        android:layout_height="50dp"></com.xuexiang.xui.widget.edittext.ClearEditText>
    <com.xuexiang.xui.widget.edittext.ClearEditText
        android:layout_width="match_parent"
        android:hint="请输入公司地址"
        android:layout_below="@+id/company_name"
        android:layout_marginTop="10dp"
        android:id="@+id/company_address"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="50dp"></com.xuexiang.xui.widget.edittext.ClearEditText>
    <com.xuexiang.xui.widget.edittext.ClearEditText
        android:layout_width="match_parent"
        android:hint="请输入公司联系方式"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/company_address"
        android:id="@+id/company_contact"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="50dp"></com.xuexiang.xui.widget.edittext.ClearEditText>
    <com.xuexiang.xui.widget.edittext.MultiLineEditText
        android:id="@+id/company_introduction"
        android:layout_width="match_parent"
        android:layout_below="@+id/company_contact"
        android:layout_height="wrap_content"
        app:mlet_hintText="来吧，简要描述一下~"
        app:mlet_maxCount="500"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"/>
    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        style="@style/RoundButton.Auto"
        android:id="@+id/make_sure"
        android:layout_below="@+id/company_introduction"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/frame_line"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:text="确定"/>
</RelativeLayout>